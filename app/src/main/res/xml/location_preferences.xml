<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Location properties">

        <EditTextPreference
            android:defaultValue="Default value"
            android:selectAllOnFocus="true"
            android:singleLine="false"
            android:title="Location tag"
            android:key="@string/location_name_column" />
        <EditTextPreference
            android:defaultValue="Default value"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Latitude"
            android:key="@string/latitude_column"
            android:inputType="numberSigned"/>
        <EditTextPreference
            android:defaultValue="Default value"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Longitude"
            android:key="@string/longitude_column"
            android:inputType="numberSigned"/>
        <EditTextPreference
            android:defaultValue="Default value"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Altitude"
            android:key="@string/altitude_column"
            android:inputType="numberSigned"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="Audio properties">
        <ru.inventions.tolerantus.locaset.util.SeekBarPreference
            android:key="ringtone_volume"
            android:summary="Ringtone volume"
            />
    </PreferenceCategory>
</PreferenceScreen>